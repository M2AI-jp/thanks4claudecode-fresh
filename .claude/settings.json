{
  "permissions": {
    "defaultMode": "bypassPermissions",
    "allow": [
      "Edit",
      "Write",
      "Task(*)",
      "Bash(git:*)",
      "Bash(npm:*)",
      "Bash(chmod:*)",
      "Bash(mkdir:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(rm:*)",
      "Bash(cat:*)",
      "Bash(ls:*)",
      "Bash(tree:*)",
      "Bash(bash:*)"
    ]
  },
  "enableAllProjectMcpServers": true,
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash -lc 'REPO_ROOT=$(git rev-parse --show-toplevel 2>/dev/null || pwd); cd \"$REPO_ROOT\" && bash .claude/hooks/pre-tool.sh'",
            "timeout": 10000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash -lc 'REPO_ROOT=$(git rev-parse --show-toplevel 2>/dev/null || pwd); cd \"$REPO_ROOT\" && bash .claude/hooks/post-tool.sh'",
            "timeout": 10000
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash -lc 'REPO_ROOT=$(git rev-parse --show-toplevel 2>/dev/null || pwd); cd \"$REPO_ROOT\" && bash .claude/hooks/session.sh'",
            "timeout": 5000
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash -lc 'REPO_ROOT=$(git rev-parse --show-toplevel 2>/dev/null || pwd); cd \"$REPO_ROOT\" && bash .claude/hooks/prompt.sh'",
            "timeout": 3000
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash -lc 'REPO_ROOT=$(git rev-parse --show-toplevel 2>/dev/null || pwd); cd \"$REPO_ROOT\" && bash .claude/hooks/subagent-stop.sh'",
            "timeout": 5000
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash -lc 'REPO_ROOT=$(git rev-parse --show-toplevel 2>/dev/null || pwd); cd \"$REPO_ROOT\" && bash .claude/events/pre-compact/chain.sh'",
            "timeout": 5000
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash -lc 'REPO_ROOT=$(git rev-parse --show-toplevel 2>/dev/null || pwd); cd \"$REPO_ROOT\" && bash .claude/events/stop/chain.sh'",
            "timeout": 3000
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash -lc 'REPO_ROOT=$(git rev-parse --show-toplevel 2>/dev/null || pwd); cd \"$REPO_ROOT\" && bash .claude/events/session-end/chain.sh'",
            "timeout": 5000
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash -lc 'REPO_ROOT=$(git rev-parse --show-toplevel 2>/dev/null || pwd); cd \"$REPO_ROOT\" && bash .claude/events/notification/chain.sh'",
            "timeout": 3000
          }
        ]
      }
    ]
  }
}
